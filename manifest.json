{
    // Required
    "manifest_version": 2,
    "name": "Work Tools",
    "version": "0.1",
    
    // Recommended
    //"default_locale": "en",
    "description": "List of tools used in everyday functions",
    //"icons": { "48": "app-icon-48.png" },
    
    // Pick one (or none)
    "browser_action": {
